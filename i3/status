general {
  colors = true
  interval = 1 
}

order += "load"
order += "disk /"
order += "wireless wlo1"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless wlo1 {
  format_up = "WIFI: %ip (%quality at %essid, %bitrate)"
  format_down = "W: down"
}

battery 0 {
  format = "POWER: %status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = "CHG"
  status_bat = "BAT"
  status_unk = "? UNK"
  status_full = "â˜» FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}

load {
  format = "LOAD 1m: %1min"
}

disk "/" {
  format = "DISK: %avail"
}

volume master {
  format = "VOL: %volume"
  format_muted = "VOL: muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
